<?xml version="1.0" encoding="UTF-8" ?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<groupId>archetype.it</groupId>
	<artifactId>basic-parent</artifactId>
	<packaging>pom</packaging>
	<version>0.1-SNAPSHOT</version>
	<name>New Sculptor Project :: Parent</name>

	<properties>
		<project.build.sourceEncoding>ISO-8859-1</project.build.sourceEncoding>
		<sculptor-version>3.1.0-SNAPSHOT</sculptor-version>
	    <hibernate-validator-version>4.3.2.Final</hibernate-validator-version>
		<slf4j-version>1.7.7</slf4j-version>
		<logback-version>1.1.2</logback-version>
		<spring-version>4.1.3.RELEASE</spring-version>
		<aspectj-version>1.7.4</aspectj-version>
		<joda-time-version>2.6</joda-time-version>
		<jackson-version>2.4.4</jackson-version>
		<xstream-version>1.4.7</xstream-version>
		<hsqldb-version>2.3.2</hsqldb-version>
	</properties>

	<modules>
		<module>../basic</module>
		<!-- Add web module when needed -->
		<!-- <module>../basic-web</module> -->
		<!-- Add ear module when deployed as ear -->
		<!-- <module>../basic-ear</module> -->
	</modules>

	<build>
		<pluginManagement>
			<plugins>
				<plugin>
					<groupId>org.apache.maven.plugins</groupId>
					<artifactId>maven-compiler-plugin</artifactId>
					<version>3.2</version>
					<configuration>
						<source>1.7</source>
						<target>1.7</target>
					</configuration>
				</plugin>
			</plugins>
		</pluginManagement>
	</build>

	<dependencyManagement>
		<dependencies>
			<dependency>
				<groupId>org.springframework</groupId>
				<artifactId>spring-framework-bom</artifactId>
				<version>${spring-version}</version>
				<type>pom</type>
				<scope>import</scope>
			</dependency>
			<dependency>
				<!-- Despite of the BOM POM do we have to keep spring-core from using commons-logging -->
				<groupId>org.springframework</groupId>
				<artifactId>spring-core</artifactId>
				<version>${spring-version}</version>
				<exclusions>
					<exclusion>
						<groupId>commons-logging</groupId>
						<artifactId>commons-logging</artifactId>
					</exclusion>
				</exclusions>
			</dependency>
		</dependencies>
	</dependencyManagement>
	<dependencies>
		<dependency>
			<groupId>junit</groupId>
			<artifactId>junit</artifactId>
			<version>4.11</version>
			<scope>test</scope>
		</dependency>
	</dependencies>

</project>
