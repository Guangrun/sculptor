<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<parent>
		<groupId>org.sculptorgenerator</groupId>
		<artifactId>sculptor-maven</artifactId>
		<version>3.0.0-SNAPSHOT</version>
	</parent>
	<artifactId>sculptor-generator-library</artifactId>
	<name>Sculptor :: Maven :: Generator Library</name>

	<properties>
		<sculptor-generator-version>3.0.0-SNAPSHOT</sculptor-generator-version>

		<!-- Directory the local Maven plugin repository is created -->
		<maven-repository>${basedir}/../maven-repository/target/repository</maven-repository>
	</properties>

	<build>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-shade-plugin</artifactId>
				<executions>
 					<execution>
 						<!-- Workaround due to GitHubs blob size limit -->
						<id>shade-eclipse-library</id>
						<phase>package</phase>
						<goals>
							<goal>shade</goal>
						</goals>
						<configuration>
							<promoteTransitiveDependencies>true</promoteTransitiveDependencies>
							<shadedArtifactAttached>true</shadedArtifactAttached>
							<shadedClassifierName>eclipse</shadedClassifierName>
							<artifactSet>
								<includes>
									<include>org.sculptorgenerator.generator:eclipse-library:runtime</include>
								</includes>
							</artifactSet>
						</configuration>
					</execution>
					<execution>
						<id>shade-sculptor-library</id>
						<phase>package</phase>
						<goals>
							<goal>shade</goal>
						</goals>
						<configuration>
							<promoteTransitiveDependencies>true</promoteTransitiveDependencies>
							<artifactSet>
								<includes>
									<include>org.sculptorgenerator.generator:sculptor-*</include>
								</includes>
							</artifactSet>
						</configuration>
					</execution>
				</executions>
			</plugin>

			<!-- We have to clean the repository directory before deploying a new snapshot version -->
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-clean-plugin</artifactId>
				<executions>
					<execution>
						<id>clean-repository</id>
						<phase>deploy</phase>
						<goals>
							<goal>clean</goal>
						</goals>
						<configuration>
							<excludeDefaultDirectories>true</excludeDefaultDirectories>
							<filesets>
								<fileset>
									<directory>${maven-repository}/org/sculptorgenerator/${project.artifactId}</directory>
									<includes>
										<include>**/*</include>
									</includes>
								</fileset>
							</filesets>
						</configuration>
					</execution>
				</executions>
			</plugin>
			<plugin>
				<artifactId>maven-deploy-plugin</artifactId>
				<executions>
					<execution>
						<id>deploy-to-repository</id>
						<phase>deploy</phase>
						<goals>
							<goal>deploy</goal>
						</goals>
						<configuration>
							<skip>false</skip>
							<altDeploymentRepository>internal-repo::default::file://${maven-repository}</altDeploymentRepository>
						</configuration>
					</execution>
				</executions>
			</plugin>
		</plugins>
	</build>

	<dependencies>
		<!-- The stand-alone Eclipse library has to be in front of the other Eclipse 
			plugins because its "plugin.properties" file must be the first in the shaded 
			JAR!!! -->
		<dependency>
			<groupId>org.sculptorgenerator.generator</groupId>
			<artifactId>eclipse-library</artifactId>
			<classifier>runtime</classifier>
			<version>${sculptor-generator-version}</version>
		</dependency>
		<dependency>
			<groupId>org.sculptorgenerator.generator</groupId>
			<artifactId>sculptor-generator-core</artifactId>
			<version>${sculptor-generator-version}</version>
			<exclusions>
				<exclusion>
					<groupId>org.sculptorgenerator.generator</groupId>
					<artifactId>eclipse-library</artifactId>
				</exclusion>
			</exclusions>
		</dependency>
	</dependencies>

</project>
